generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
    directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Category {
    id    Int    @id @default(autoincrement())
    name  String @unique
    slug  String @unique
    fontIcon String?
    tools Tool[]
}

model Tool {
    id               Int      @id @default(autoincrement())
    icon             String // Store the URL or path to the icon
    thumbnail        String // Store the URL or path to the icon
    name             String
    slug             String
    description      String
    shortDescription String
    url              String
    pricing          String
    categoryId       Int
    category         Category @relation(fields: [categoryId], references: [id])
    tags             String[]
}

model FeatureProject {
    id          Int    @id @default(autoincrement())
    icon        String
    title       String @unique
    description String
    link        String
}

model Tutorial {
    id    Int      @id @default(autoincrement())
    icon  String
    title String
    url   String   @unique
    tags  String[]
}

model News {
    id    Int    @id @default(autoincrement())
    icon  String
    title String
    url   String
    date?  String
}
